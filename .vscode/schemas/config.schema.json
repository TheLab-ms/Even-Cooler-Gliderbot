{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://thelab.ms/schema/config.json",
  "title": "TheLab.ms Config Schema",
  "description": "TheLab.ms Config Schema",
  "type": "object",
  "properties": {
    "autoResponse": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "phrases": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of phrases that will trigger the bot's response."
          },
          "responses": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of responses that the bot will randomly choose from."
          },
          "reaction": {
            "type": "string",
            "description": "Emoji that the bot will react with."
          }
        },
        "required": [
          "phrases"
        ],
        "additionalProperties": false
      },
      "description": "List of auto responses."
    },
    "status": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "playing",
            "streaming",
            "listening",
            "watching",
            "competing"
          ],
          "description": "The bot's status type."
        },
        "message": {
          "type": "string",
          "description": "The bot's status message."
        }
      },
      "required": [
        "type",
        "message"
      ],
      "additionalProperties": false,
      "default": {
        "type": "watching",
        "message": "you"
      },
      "description": "The bot status message."
    },
    "printers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the printer."
          },
          "address": {
            "type": "string",
            "format": "uri",
            "description": "The IP address or Hostname of the printer."
          },
          "apiKey": {
            "type": "string",
            "description": "The API key for the printer."
          },
          "hasWebcam": {
            "type": "boolean",
            "default": true,
            "description": "Whether the printer has a webcam."
          },
          "make": {
            "type": "string",
            "description": "The make of the printer."
          },
          "model": {
            "type": "string",
            "description": "The model of the printer."
          },
          "color": {
            "type": "string",
            "description": "The color of the printer."
          }
        },
        "required": [
          "name",
          "address",
          "apiKey"
        ],
        "additionalProperties": false
      },
      "default": [],
      "description": "List of printers."
    },
    "forceKeycloakName": {
      "type": "boolean",
      "default": false
    }
  }
}